<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   https://www.springframework.org/schema/context/spring-context.xsd">
    <context:component-scan base-package="com.codingnomads.corespring.lab"/>

    <bean id="xmlMonitor" class="com.codingnomads.corespring.lab.mylab.Monitor" init-method="init" destroy-method="cleanup">
        <property name="name" value="JLink"/>
        <property name="sizeInches" value="32"/>
    </bean>

</beans>
